<jaxb:bindings 
    xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  	xmlns:annox="http://annox.dev.java.net"
  	jaxb:extensionBindingPrefixes="annox"
  	xsi:schemaLocation="http://java.sun.com/xml/ns/jaxb 
  		http://java.sun.com/xml/ns/jaxb/bindingschema_2_1.xsd 
  		http://annox.dev.java.net"
    version="2.1">


  <jaxb:bindings schemaLocation="request.xsd" node="/xs:schema"> 
       <jaxb:bindings node="//xs:complexType[contains(@name, 'CustomerResponse')]" >
            <annox:annotate  target="class">
                <annox:annotate annox:class="javax.xml.bind.annotation.XmlRootElement" name="customerResponse"/>
          </annox:annotate>
      </jaxb:bindings>    
      <jaxb:bindings node="//xs:complexType[@name='OrderResponse']">
            <annox:annotate target="class">
                <annox:annotate annox:class="javax.xml.bind.annotation.XmlRootElement" name="orderResponse"/>
          </annox:annotate>
      </jaxb:bindings>
   </jaxb:bindings>
</jaxb:bindings>